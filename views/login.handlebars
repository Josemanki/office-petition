<div id='login-page'>
  <div class='login-page__headings'>
    <h1 class='login-heading'>Log in to sign our petition</h1>
  </div>
  <div class='login-page__form'>
    {{#if error}}
      <span class='error-message'>{{error}}</span>
    {{/if}}
    <form action='/login' method='post' class='form'>
      <label for='last_name' class='form__label text-centered'>Email address</label>
      <input type='text' name='email_address' required class='form-input' />
      <label for='last_name' class='form__label text-centered'>Password</label>
      <input type='password' name='password' required class='form-input' />
      <button type='submit' class='form__button'>Log in</button>
      <span class='login-signup-cta'>Do not have an account? <a href='/register'>Sign up now!</a></span>
    </form>
  </div>
</div>